@page "/home/participant/hackathons/{id:guid}/register/join-team"

@using GroundZero.Web.Authentication
@using GroundZero.Web.Entities
@using Microsoft.AspNetCore.Authorization
@using SqlSugar

@attribute [Authorize]

@inject NavigationManager Navigation
@inject IHttpContextAccessor HttpContextAccessor
@inject ISqlSugarClient Db

@if (Hackathon is null)
{
    return;
}

<h2>@Hackathon.Name</h2>

@if (!string.IsNullOrWhiteSpace(Hackathon.Description))
{
    <p>@Hackathon.Description</p>
}

<hr/>

<h3>
    Date
</h3>
<p>
    @Hackathon.EventStartDate.ToString("d") - @Hackathon.EventEndDate.ToString("d")
    (@((Hackathon.EventEndDate - Hackathon.EventStartDate).TotalDays.ToString("N0")) days)
</p>

@if (!string.IsNullOrWhiteSpace(Hackathon.Venue))
{
    <h3>
        Location
    </h3>
    <p>
        @Hackathon.Venue
    </p>
}

@if (Model is not null)
{
    <EditForm OnValidSubmit="Submit" EditContext="_editContext" FormName="HackathonJoinExistingTeam">
        <HxInputText Label="Join existing team" @bind-Value="Model!.TeamJoinCode" Hint="Enter your team code here"></HxInputText>
        <HxSubmit Color="ThemeColor.Primary">Join!</HxSubmit>
    </EditForm>
}

@code {

    [Parameter]
    public Guid Id { get; set; }

    private Entities.Hackathon? Hackathon { get; set; }

    [SupplyParameterFromForm]
    public RegisterModel? Model { get; set; }

    private EditContext? _editContext;
    private ValidationMessageStore? _messageStore;

    protected override async Task OnInitializedAsync()
    {
        Hackathon = await Db.Queryable<Entities.Hackathon>().Includes(h => h.Organizers).SingleAsync(h => h.Id == Id);
        if (Hackathon is null)
        {
            Navigation.NavigateTo("home");
            return;
        }

        Model ??= new RegisterModel();

        _editContext = new EditContext(Model);
        _messageStore = new ValidationMessageStore(_editContext);

        // if (Hackathon.Organizers.Any(o => o.UserId == HttpContextAccessor.HttpContext?.User.GetUserId()))
        // {
        //     Navigation.NavigateTo($"home/hackathons/{Id}");
        //     return;
        // }
    }

    public async Task Submit()
    {
        var team = await Db.Queryable<Entities.Team>()
            .SingleAsync(t => t.HackathonId == Id && t.JoinCode == Model!.TeamJoinCode);

        if (team is null)
        {
            _messageStore?.Add(() => Model!.TeamJoinCode, "Invalid join code");
            return;
        }

        await Db.Insertable(new Participant
        {
            UserId = HttpContextAccessor.HttpContext?.User.GetUserId() ?? throw new Exception(),
            HackathonId = Id,
            TeamId = team.Id
        }).ExecuteCommandAsync();
    }

    public class RegisterModel
    {
        public string? TeamJoinCode { get; set; }
    }

}
